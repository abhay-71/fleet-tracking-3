@model FleetTracking.Models.Vehicle

@{
    ViewData["Title"] = "Create Vehicle";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create Vehicle</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Vehicle" asp-action="Index">Vehicles</a></li>
        <li class="breadcrumb-item active">Create New</li>
    </ol>

    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-car me-1"></i>
                    Vehicle Details
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CompanyId" class="form-label"></label>
                                    <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.CompanyId">
                                        <option value="">-- Select Company --</option>
                                    </select>
                                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="VehicleTypeId" class="form-label"></label>
                                    <select asp-for="VehicleTypeId" class="form-select" asp-items="ViewBag.VehicleTypeId">
                                        <option value="">-- Select Vehicle Type --</option>
                                    </select>
                                    <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="RegistrationNumber" class="form-label"></label>
                                    <input asp-for="RegistrationNumber" class="form-control" />
                                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Make" class="form-label"></label>
                                    <input asp-for="Make" class="form-control" />
                                    <span asp-validation-for="Make" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Model" class="form-label"></label>
                                    <input asp-for="Model" class="form-control" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Year" class="form-label"></label>
                                    <input asp-for="Year" class="form-control" type="number" min="1900" max="2100" />
                                    <span asp-validation-for="Year" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Color" class="form-label"></label>
                                    <input asp-for="Color" class="form-control" />
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="VIN" class="form-label"></label>
                                    <input asp-for="VIN" class="form-control" />
                                    <span asp-validation-for="VIN" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="LicensePlate" class="form-label"></label>
                                    <input asp-for="LicensePlate" class="form-control" />
                                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="FuelType" class="form-label"></label>
                                    <select asp-for="FuelType" class="form-select">
                                        <option value="Petrol">Petrol</option>
                                        <option value="Diesel">Diesel</option>
                                        <option value="Electric">Electric</option>
                                        <option value="Hybrid">Hybrid</option>
                                        <option value="LPG">LPG</option>
                                        <option value="CNG">CNG</option>
                                    </select>
                                    <span asp-validation-for="FuelType" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="FuelCapacity" class="form-label"></label>
                                    <input asp-for="FuelCapacity" class="form-control" type="number" step="0.1" min="0" />
                                    <span asp-validation-for="FuelCapacity" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="CurrentFuelLevel" class="form-label"></label>
                                    <input asp-for="CurrentFuelLevel" class="form-control" type="number" step="0.1" min="0" />
                                    <span asp-validation-for="CurrentFuelLevel" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="OdometerReading" class="form-label"></label>
                                    <input asp-for="OdometerReading" class="form-control" type="number" step="0.1" min="0" />
                                    <span asp-validation-for="OdometerReading" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label"></label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="active">Active</option>
                                        <option value="inactive">Inactive</option>
                                        <option value="maintenance">Maintenance</option>
                                        <option value="retired">Retired</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LastServiceDate" class="form-label"></label>
                                    <input asp-for="LastServiceDate" class="form-control" type="date" />
                                    <span asp-validation-for="LastServiceDate" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NextServiceDate" class="form-label"></label>
                                    <input asp-for="NextServiceDate" class="form-control" type="date" />
                                    <span asp-validation-for="NextServiceDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Custom validation to ensure CurrentFuelLevel doesn't exceed FuelCapacity
        $(document).ready(function() {
            $('form').submit(function(e) {
                var fuelCapacity = parseFloat($('#FuelCapacity').val());
                var currentFuelLevel = parseFloat($('#CurrentFuelLevel').val());
                
                if (currentFuelLevel > fuelCapacity) {
                    e.preventDefault();
                    alert('Current fuel level cannot exceed fuel capacity');
                    return false;
                }
                
                return true;
            });
        });
    </script>
} 