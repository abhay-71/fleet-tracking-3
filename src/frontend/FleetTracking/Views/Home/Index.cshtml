@model FleetTracking.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Fleet Tracking - Home";
}

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Fleet Tracking</h1>
        <p class="lead">Your complete solution for vehicle fleet management and tracking.</p>
        <hr class="my-4">
        <p>Track vehicles, manage drivers, monitor maintenance, and analyze trips all in one place.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">System Status</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="stat-item">
                                <i class="fas fa-car fa-2x mb-2 text-primary"></i>
                                <h3>@Model.VehicleCount</h3>
                                <p>Vehicles</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <i class="fas fa-user fa-2x mb-2 text-success"></i>
                                <h3>@Model.DriverCount</h3>
                                <p>Drivers</p>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-6">
                            <div class="stat-item">
                                <i class="fas fa-route fa-2x mb-2 text-info"></i>
                                <h3>@Model.TripsInProgress</h3>
                                <p>Active Trips</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <i class="fas fa-exclamation-triangle fa-2x mb-2 text-warning"></i>
                                <h3>@Model.MaintenanceAlerts</h3>
                                <p>Maintenance Alerts</p>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-3 text-muted">
                        <small>Server Time: @Model.ServerTime.ToString("yyyy-MM-dd HH:mm:ss")</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Quick Links</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/Vehicle" class="list-group-item list-group-item-action">
                            <i class="fas fa-car mr-2"></i> Vehicle Management
                        </a>
                        <a href="/Driver" class="list-group-item list-group-item-action">
                            <i class="fas fa-id-card mr-2"></i> Driver Management
                        </a>
                        <a href="/Trip" class="list-group-item list-group-item-action">
                            <i class="fas fa-route mr-2"></i> Trip Tracking
                        </a>
                        <a href="/Maintenance" class="list-group-item list-group-item-action">
                            <i class="fas fa-tools mr-2"></i> Maintenance Records
                        </a>
                        <a href="/Monitoring" class="list-group-item list-group-item-action">
                            <i class="fas fa-tachometer-alt mr-2"></i> Live Monitoring
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Diagnostic Tools</h5>
                </div>
                <div class="card-body">
                    <p>Testing tools to help diagnose application issues:</p>
                    <div class="list-group">
                        <a href="/diagnostic.html" class="list-group-item list-group-item-action">
                            <i class="fas fa-stethoscope mr-2"></i> System Diagnostic Page
                        </a>
                        <a href="/css-test.html" class="list-group-item list-group-item-action">
                            <i class="fas fa-palette mr-2"></i> CSS/Static File Test
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-item {
        text-align: center;
        padding: 10px;
    }
    .stat-item h3 {
        font-size: 2rem;
        margin: 5px 0;
        font-weight: bold;
    }
    .stat-item p {
        font-size: 1rem;
        color: #666;
        margin: 0;
    }
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        border-radius: 0.5rem;
        overflow: hidden;
    }
    .card-header {
        font-weight: 600;
    }
    .fas {
        margin-right: 8px;
    }
    .jumbotron {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 2rem;
    }
</style> 