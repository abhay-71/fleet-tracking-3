@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard">
    <h1 class="display-4 mb-4">Dashboard</h1>

    <!-- Top KPI Cards -->
    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Vehicles</h5>
                    <p class="card-text display-6">15</p>
                    <p class="card-text"><small>12 Active, 3 Inactive</small></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Drivers</h5>
                    <p class="card-text display-6">18</p>
                    <p class="card-text"><small>14 Active, 4 Inactive</small></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Active Trips</h5>
                    <p class="card-text display-6">7</p>
                    <p class="card-text"><small>3 On Schedule, 4 Delayed</small></p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Alerts</h5>
                    <p class="card-text display-6">3</p>
                    <p class="card-text"><small>1 Critical, 2 Warning</small></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row mt-4">
        <!-- Vehicle Status -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Fleet Status</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Vehicle</th>
                                    <th>Driver</th>
                                    <th>Status</th>
                                    <th>Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Truck #1234</td>
                                    <td>John Doe</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>Memphis, TN</td>
                                </tr>
                                <tr>
                                    <td>Van #5678</td>
                                    <td>Jane Smith</td>
                                    <td><span class="badge bg-warning">Maintenance</span></td>
                                    <td>Nashville, TN</td>
                                </tr>
                                <tr>
                                    <td>Car #9012</td>
                                    <td>Mike Johnson</td>
                                    <td><span class="badge bg-danger">Stopped</span></td>
                                    <td>Louisville, KY</td>
                                </tr>
                                <tr>
                                    <td>Truck #3456</td>
                                    <td>Sarah Brown</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>Indianapolis, IN</td>
                                </tr>
                                <tr>
                                    <td>Van #7890</td>
                                    <td>Robert Davis</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>Cincinnati, OH</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="text-end mt-2">
                        <a asp-controller="Vehicle" asp-action="Index" class="btn btn-sm btn-primary">View All Vehicles</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Trips -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Active Trips</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th>Trip ID</th>
                                    <th>Driver</th>
                                    <th>Destination</th>
                                    <th>ETA</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>T-2023-001</td>
                                    <td>John Doe</td>
                                    <td>Chicago, IL</td>
                                    <td>Today 15:30</td>
                                    <td><span class="badge bg-success">On Time</span></td>
                                </tr>
                                <tr>
                                    <td>T-2023-002</td>
                                    <td>Jane Smith</td>
                                    <td>St. Louis, MO</td>
                                    <td>Today 17:45</td>
                                    <td><span class="badge bg-warning">Delayed</span></td>
                                </tr>
                                <tr>
                                    <td>T-2023-003</td>
                                    <td>Mike Johnson</td>
                                    <td>Atlanta, GA</td>
                                    <td>Tomorrow 09:15</td>
                                    <td><span class="badge bg-success">On Time</span></td>
                                </tr>
                                <tr>
                                    <td>T-2023-004</td>
                                    <td>Sarah Brown</td>
                                    <td>Detroit, MI</td>
                                    <td>Tomorrow 11:30</td>
                                    <td><span class="badge bg-danger">Delayed</span></td>
                                </tr>
                                <tr>
                                    <td>T-2023-005</td>
                                    <td>Robert Davis</td>
                                    <td>Cleveland, OH</td>
                                    <td>Tomorrow 14:45</td>
                                    <td><span class="badge bg-success">On Time</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="text-end mt-2">
                        <a asp-controller="Trip" asp-action="Index" class="btn btn-sm btn-primary">View All Trips</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Map and Alerts Row -->
    <div class="row">
        <!-- Map Widget -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Fleet Map</h5>
                </div>
                <div class="card-body">
                    <div id="map-placeholder" class="bg-light text-center py-5">
                        <i class="fas fa-map-marked-alt fa-5x mb-3"></i>
                        <h3>Interactive Map</h3>
                        <p>The map would display all active vehicles and their current locations.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alerts Widget -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Recent Alerts</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item list-group-item-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Critical:</strong> Truck #3456 exceeding speed limit
                            <small class="text-muted d-block mt-1">30 mins ago</small>
                        </li>
                        <li class="list-group-item list-group-item-warning">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Warning:</strong> Van #5678 maintenance due in 2 days
                            <small class="text-muted d-block mt-1">2 hours ago</small>
                        </li>
                        <li class="list-group-item list-group-item-warning">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Warning:</strong> Driver license for Mike Johnson expires in 10 days
                            <small class="text-muted d-block mt-1">5 hours ago</small>
                        </li>
                        <li class="list-group-item list-group-item-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Info:</strong> Trip T-2023-002 has been delayed
                            <small class="text-muted d-block mt-1">Yesterday</small>
                        </li>
                        <li class="list-group-item list-group-item-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Info:</strong> New trip T-2023-007 has been scheduled
                            <small class="text-muted d-block mt-1">Yesterday</small>
                        </li>
                    </ul>
                </div>
                <div class="card-footer text-end">
                    <a href="#" class="btn btn-sm btn-primary">View All Alerts</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // This would be replaced with actual dashboard initialization code
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Dashboard loaded');
        });
    </script>
} 